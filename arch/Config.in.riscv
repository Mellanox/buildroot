config BR2_ARCH
	default "riscv32" if BR2_riscv32
	default "riscv64" if BR2_riscv64

config BR2_RISCV_EXT_A
	bool "`A' standard extension (atomic instructions)"

config BR2_ARCH_HAS_ATOMICS
	default y if BR2_RISCV_EXT_A

config BR2_ENDIAN
	default "LITTLE"

config BR2_READELF_ARCH_NAME
	default "RISC-V"
